{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src"],
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist","build"],
}